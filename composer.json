{
    "name": "bytelovers/adcumulus-php-client",
    "description": "A Client for Adcumulus API",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.0",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "phpdocumentor/phpdocumentor": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "Bytelovers\\AdCumulus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bytelovers\\AdCumulus\\Test\\": "tests/"
        }
    },
    "scripts": {
        "php:doc": [
            "@doc:clean",
            "php ./vendor/phpdocumentor/phpdocumentor/bin/phpdoc.php -d ./src -t docs/api"
        ],
        "doc:clean": "rm -rf docs/api"
    },
    "minimum-stability": "stable"
}
